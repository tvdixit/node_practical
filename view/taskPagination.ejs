<!DOCTYPE html>
<html>

<head>
    <title>Task List</title>
</head>

<body>

    <h1>Task List</h1>
    <form action="" method="get">
        <label for="page"><b>Go to Page:</b></label>
        <input type="number" id="page" name="page" value="<%= page %>">
        <button type="submit">Go</button>
        <% if (skip + tasks.length < total) { %>
            <a href="?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= search %>">Next Page</a>
            <% } %>
                <% if (page> 1) { %>
                    <a href="?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= search %>">Previous Page</a>
                    <% } %>
    </form>
    <table border="2px">
        <tr>
            <th>index</th>
            <th>Name:</th>
            <th> Description:</th>
            <th> User ID:</th>
            <th> Due Date:</th>
            <th> Priority:</th>
            <th> Is Completed:</th>
            <th> Is Deleted:</th>
            <th>Action:</th>
        </tr>
        <% for (var i=0; i < tasks.length; i++) { %>
            <tr align="center">
                <td>
                    <%= i + 1 %>
                </td>
                <td>
                    <%= tasks[i].name %>
                </td>

                <td>
                    <%= tasks[i].description %>
                </td>
                <td>
                    <%= tasks[i].user_id %>
                </td>
                <td>
                    <%= tasks[i].due_date.toLocaleDateString("en-GB", { weekday: 'short' , day: '2-digit' ,
                        month: '2-digit' , year: 'numeric' }) %>

                </td>
                <td>
                    <%= tasks[i].priority %>
                </td>
                <td>
                    <%= tasks[i].is_completed %>
                </td>
                <td>
                    <%= tasks[i].is_deleted %>
                </td>
                <td>
                    <a href="/task/edit-task/<%= tasks[i]._id %>">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
                            <path
                                d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z" />
                        </svg></a>
                </td>
            </tr>
            <% } %>
    </table>
    <div>
        <p>Page: <%= page %>
        </p>
        <p>Limit: <%= limit %>
        </p>
        <p>Total: <%= total %>
        </p>
    </div>
    <div>
        <% if (page> 1) { %>
            <a href="?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= search %>">Previous Page</a>
            <% } %>
                <% if (skip + tasks.length < total) { %>
                    <a href="?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= search %>">Next Page</a>
                    <% } %>
    </div>
</body>

</html>